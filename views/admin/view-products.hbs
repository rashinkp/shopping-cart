<section>
    <div class="container">
    <div class="row">
        <div class="col-md-12 p-3" style="display: flex; justify-content: flex-end;"> 
            
        <a href="/admin/add-product"><button class="btn btn-primary me-5">Add Product</button></a>
    </div>
        <table class="display" id="productsTable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Prise</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>

    {{#each products}}

    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.prise}}</td>
      <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt="Not supported"></td>
      <td><a href="/admin/edit-product/{{this._id}}"><button class="btn btn-success">Edit</button></a>
      <a href="/admin/delete-product/{{this._id}}"><button class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}} ?')">Delete</button></a></td>
    </tr>
    
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>