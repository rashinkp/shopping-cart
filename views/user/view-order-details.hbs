<link rel="stylesheet" href="/stylesheets/view-order.css">
<section class="content">


    <div class="container mt-4">

        <!-- Top Section: List of Products -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-box">
                    <h2 class="mb-4">List of Products</h2>
                    <!-- Sample product box, you can dynamically generate these boxes based on your data -->
                    <div class="product-box">
                        <img src="product-image-1.jpg" alt="Product Image 1" class="img-fluid">
                        <div>
                            <h4>Product Name 1</h4>
                            <p>Price: $19.99</p>
                        </div>
                    </div>
                    <div class="product-box">
                        <img src="product-image-2.jpg" alt="Product Image 2" class="img-fluid">
                        <div>
                            <h4>Product Name 2</h4>
                            <p>Price: $29.99</p>
                        </div>
                    </div>
                    <!-- Repeat the above product box for each product in the list -->
                </div>
            </div>
        </div>

        <!-- Lower Section: Order Details -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-box">
                    <h2 class="mb-4">Order Details</h2>
                    <p><strong>Date of Order:</strong> January 1, 2023</p>
                    <p><strong>Order Status:</strong> Processing</p>
                    <!-- Separate box for order details -->
                    
                </div>
            </div>
        </div>

        <!-- Additional Sections: Address and Payment Method -->
        <div class="row">
            <div class="col-md-6">
                <div class="section-box">
                    <h2 class="mb-4">Address</h2>
                    <ul>
                        <li><strong>Mobile:</strong> 123-456-7890</li>
                        <li><strong>Place:</strong> Your Place</li>
                        <li><strong>State:</strong> Your State</li>
                        <li><strong>District:</strong> Your District</li>
                        <li><strong>Pincode:</strong> Your Pincode</li>
                        <li><strong>Address:</strong> Your Full Address</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="section-box">
                    <h2 class="mb-4">Payment Method</h2>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="cashOnDelivery">
                        <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="onlinePayment">
                        <label class="form-check-label" for="onlinePayment">Online Payment</label>
                    </div>
                </div>
            </div>
        </div>

    </div>


</section>