<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #fff;
        margin: 0;
        padding: 0;
    }

    .login-container {
        max-width: 500px;
        margin: auto;
        margin-top: 50px;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.2s ease-in-out;
    }

    .error-message {
        color: red;
        font-size: 12px;
        margin-top: 5px;
    }

    .btn-login-container {
        text-align: center;
    }

    .btn-login {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
    }

    .btn-login:hover {
        background-color: #0056b3;
    }

    .signup-link {
        text-align: center;
        margin-top: 20px;
    }

    .signup-link a {
        color: #007bff;
        text-decoration: none;
    }
</style>



<section class="content">

    <div class="login-container">
        <h2 class="login-title">Login</h2>
        <form onsubmit="return validateForm()" action="/login" method="POST">
        {{#if loginErr}}
            <p class="error text-danger">{{loginErr}}</p>
        {{/if}}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email" required
                    onblur="validateField('email')" name="email">
                <div class="error-message" id="errorEmail"></div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" required
                    onblur="validateField('password')" name="password">
                <div class="error-message" id="errorPassword"></div>
            </div>
            <div class="btn-login-container">
                <button type="submit" class="btn btn-login">Login</button>
            </div>
        </form>
        <div class="signup-link">
            <p>Don't have an account? <a href="/signup">Create one</a></p>
        </div>
    </div>

</section>

<script>
    function validateForm() {
        // Add additional logic if needed
        return true;
    }

    function validateField(fieldName) {
        // Reset border color and clear the "field is required" message
        document.getElementById(fieldName).style.borderColor = '#ced4da';
        document.getElementById('error' + fieldName.charAt(0).toUpperCase() + fieldName.slice(1)).innerHTML = '';

        // Check if the field is empty when leaving the field
        var fieldValue = document.getElementById(fieldName).value;
        if (!fieldValue.trim()) {
            document.getElementById(fieldName).style.borderColor = 'red';
            document.getElementById('error' + fieldName.charAt(0).toUpperCase() + fieldName.slice(1)).innerHTML =
                'This field is required';
        }
    }
</script>

